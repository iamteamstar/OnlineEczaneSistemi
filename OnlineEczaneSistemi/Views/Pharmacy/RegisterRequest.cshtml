@model OnlineEczaneSistemi.Models.PharmacyRegistrationRequest

@{
    ViewData["Title"] = "Eczane Başvuru Formu";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-5">
    <div class="card p-4 shadow-lg col-md-6 mx-auto border-0" style="border-radius:12px;">

        <h3 class="text-center mb-4 fw-bold text-success">
            <i class="bi bi-hospital"></i> Eczane Başvuru Formu
        </h3>

        <form method="post">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Eczane Adı</label>
                <input asp-for="PharmacyName" class="form-control" placeholder="Örn: Güneş Eczanesi" />
                <span asp-validation-for="PharmacyName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">E-Posta</label>
                <input asp-for="Email" class="form-control" placeholder="eczane@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Adres</label>
                <textarea asp-for="Address" class="form-control" rows="2" placeholder="Eczane adresini yazınız..."></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Telefon</label>
                <input asp-for="Phone" class="form-control" placeholder="05xx xxx xx xx" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Vergi No</label>
                <input asp-for="TaxNumber" class="form-control" placeholder="Vergi numarasını giriniz" />
                <span asp-validation-for="TaxNumber" class="text-danger"></span>
            </div>

            <hr />

            <h5 class="fw-bold mt-3">Giriş Bilgileri</h5>

            <div class="form-group mb-3">
                <label class="form-label fw-semibold">Parola</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="En az 6 karakter" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-semibold">Parola Tekrar</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Parolayı tekrar girin" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button class="btn btn-success w-100 py-2 fw-bold">
                <i class="bi bi-send-check"></i> Başvuruyu Gönder
            </button>

            <div class="text-center mt-3">
                <a href="/Account/ChooseLogin" class="text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
