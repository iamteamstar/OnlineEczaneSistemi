@model List<OnlineEczaneSistemi.Models.Order>

@{
    ViewData["Title"] = "Eczane Paneli";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">

        <!-- Sidebar -->
        <div class="col-md-2 bg-light border-end vh-100 p-3">
            <h4 class="fw-bold mb-4 text-success">Eczane Paneli</h4>

            <ul class="nav flex-column">
                <li class="nav-item"><a href="/Pharmacy/Dashboard" class="nav-link active">📦 Gelen Siparişler</a></li>
                <li class="nav-item"><a href="/Pharmacy/Stock" class="nav-link">💊 Stok Yönetimi </a></li>
                <li class="nav-item"><a href="/Account/Profile" class="nav-link">👤 Profilim</a></li>
            </ul>
        </div>

        <!-- Dashboard Content -->
        <div class="col-md-10 p-4">

            <h2 class="mb-4">Gelen Siparişler</h2>

            @if (!Model.Any())
            {
                <div class="alert alert-info">Şu anda size atanan bir sipariş yok.</div>
            }
            else
            {
                <div class="row">

                    @foreach (var order in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">

                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">Sipariş #@order.OrderId</h5>
                                </div>

                                <div class="card-body">

                                    <p><strong>Hasta:</strong> @order.User.FullName</p>
                                    <p><strong>Adres:</strong> @order.DeliveryAddress</p>
                                    <p>
                                        <strong>Durum:</strong>
                                        @if (order.Status == "PendingPharmacy")
                                        {
                                            <span class="badge bg-warning text-dark">Yeni Sipariş</span>
                                        }
                                        else if (order.Status == "Preparing")
                                        {
                                            <span class="badge bg-info">Hazırlanıyor</span>
                                        }
                                        else if (order.Status == "WaitingCourier")
                                        {
                                            <span class="badge bg-primary">Kurye Bekleniyor</span>
                                        }
                                        else if (order.Status == "OnTheWay")
                                        {
                                            <span class="badge bg-info">Yolda</span>
                                        }
                                        else if (order.Status == "Delivered")
                                        {
                                            <span class="badge bg-success">Teslim Edildi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Durum Yok</span>
                                        }

                                    </p>

                                    <a href="/Pharmacy/OrderDetail/@order.OrderId" class="btn btn-outline-success w-100">
                                        Detay
                                    </a>



                                </div>
                            </div>
                        </div>

                        <!-- MODAL -->
                        <div class="modal fade" id="orderModal@order.OrderId">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">

                                    <div class="modal-header">
                                        <h5 class="modal-title">Sipariş Detayı #@order.OrderId</h5>
                                        <button class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>

                                    <div class="modal-body">
                                        <h5>İlaçlar</h5>

                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>İlaç</th>
                                                    <th>Adet</th>
                                                    <th>Fiyat</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in order.Items)
                                                {
                                                    <tr>
                                                        <td>@item.MedicineName</td>
                                                        <td>@item.Quantity</td>
                                                        <td>@item.UnitPrice ₺</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>

                                        <h5 class="mt-3">Toplam: @order.TotalPrice ₺</h5>
                                    </div>

                                    <div class="modal-footer">

                                        @if (order.Status == "Pending")
                                        {
                                            <a href="/Pharmacy/StartPreparing/@order.OrderId" class="btn btn-warning">Hazırlamaya Başla</a>
                                        }
                                        else if (order.Status == "Preparing")
                                        {
                                            <a href="/Pharmacy/CompletePreparing/@order.OrderId" class="btn btn-success">Hazırlandı</a>
                                        }

                                        <button class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
