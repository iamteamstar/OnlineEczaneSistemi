@model List<OnlineEczaneSistemi.Models.Order>

<h2>Teslim Edilen Siparişler</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz teslim edilen bir sipariş bulunmuyor.</div>
}
else
{
    <!-- Kart yapısı -->
    <div class="row mb-4">
        @foreach (var order in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        Sipariş #@order.OrderId
                    </div>
                    <div class="card-body">
                        <p><strong>Hasta:</strong> @order.User.FullName</p>
                        <p><strong>Adres:</strong> @order.DeliveryAddress</p>
                        <p><strong>Fiyat:</strong> @order.TotalPrice ₺</p>
                        <p><strong>Teslim:</strong> @order.CreatedAt.ToString("dd.MM.yyyy")</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr />

    <!-- Tablo yapısı -->
    <table class="table table-striped table-bordered">
        <thead class="table-success">
            <tr>
                <th>#</th>
                <th>Hasta</th>
                <th>Adres</th>
                <th>Toplam Fiyat</th>
                <th>Tarih</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.OrderId</td>
                    <td>@o.User.FullName</td>
                    <td>@o.DeliveryAddress</td>
                    <td>@o.TotalPrice ₺</td>
                    <td>@o.CreatedAt.ToString("dd.MM.yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
