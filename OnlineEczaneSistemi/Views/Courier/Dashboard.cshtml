@model List<OnlineEczaneSistemi.Models.Order>

@{
    ViewData["Title"] = "Kurye Paneli";
}

<h2 class="mb-4">Teslim Edilecek Siparişler</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Şu anda üzerinizde aktif bir teslimat bulunmuyor.</div>
}
else
{
    <div class="row">

        @foreach (var order in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">

                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Sipariş #@order.OrderId</h5>
                    </div>

                    <div class="card-body">
                        <p><strong>Hasta:</strong> @order.User.FullName</p>
                        <p><strong>Adres:</strong> @order.DeliveryAddress</p>

                        <p>
                            <strong>Durum:</strong>
                            @if (order.Status == "WaitingCourier")
                            {
                                <span class="badge bg-warning text-dark">Kurye Bekliyor</span>
                            }
                            else if (order.Status == "OnTheWay")
                            {
                                <span class="badge bg-info">Yolda</span>
                            }
                        </p>

                        <a href="/Courier/OrderDetail/@order.OrderId"
                           class="btn btn-outline-primary w-100">Detay</a>
                    </div>

                </div>
            </div>
        }

    </div>
}
