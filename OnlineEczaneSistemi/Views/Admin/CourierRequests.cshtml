@model List<OnlineEczaneSistemi.Models.CourierRegistrationRequest>

@{
    ViewData["Title"] = "Kurye Başvuruları";
}

<h2 class="mb-4">Kurye Kayıt Başvuruları</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Hiç başvuru bulunmamaktadır.</div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">

                    <div class="card-header bg-warning">
                        <h5 class="mb-0">@item.FullName</h5>
                    </div>

                    <div class="card-body">

                        <p><strong>Email:</strong> @item.Email</p>
                        <p><strong>Telefon:</strong> @item.Phone</p>
                        <p><strong>Araç Türü:</strong> @item.VehicleType</p>

                        <p class="mt-3">
                            <strong>Durum:</strong>

                            @if (item.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Beklemede</span>
                            }
                            else if (item.Status == "Approved")
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Reddedildi</span>
                            }
                        </p>

                        <p><strong>Başvuru Tarihi:</strong> @item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>

                    </div>

                    <div class="card-footer">

                        @if (item.Status == "Pending")
                        {
                            <a class="btn btn-success btn-sm" href="/Admin/ApproveCourier/@item.Id">
                                Onayla
                            </a>
                            <a class="btn btn-danger btn-sm" href="/Admin/RejectCourier/@item.Id">
                                Reddet
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-sm" disabled>İşlem Yapılamaz</button>
                        }

                    </div>

                </div>
            </div>
        }
    </div>
}
