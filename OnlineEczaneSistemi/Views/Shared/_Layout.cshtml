<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineEczaneSistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineEczaneSistemi.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">OnlineEczaneSistemi</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary fw-bold" href="/Admin/Dashboard">Admin Panel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary fw-bold" href="/Admin/Index">Kullanıcılar</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary fw-bold" href="/Admin/PharmacyRequests">Eczane Başvuruları</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary fw-bold" href="/Admin/CourierRequests">Kurye Başvuruları</a>
                                </li>
                            }

                            if (User.IsInRole("Pharmacy"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-bold text-success" href="/Pharmacy/Dashboard">Eczane Paneli</a>
                                </li>
                            }

                            if (User.IsInRole("Courier"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-bold text-warning" href="/Courier/Dashboard">Kurye Paneli</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Profile">Profilim</a>
                            </li>

                            <li class="nav-item">
                                <form method="post" action="/Account/Logout">
                                    <button class="btn btn-danger btn-sm ms-2">Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Yeni giriş sistemi -->
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/ChooseLogin">Giriş Yap</a>
                            </li>

                            <!-- Hasta kayıt kısmı -->
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - OnlineEczaneSistemi
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
