@model OnlineEczaneSistemi.Models.ViewModels.Login

@{
    ViewData["Title"] = "Giriş Yap";
}
<head>
    <link rel="stylesheet" href="~/css/AccountDesign/Login.css" />
</head>
<h2 class="mb-4"></h2>


<div class="login-container">
    <div class="login-card">
        <h2>Giriş Yap</h2>
        <form asp-action="Login" method="post">
            <input type="hidden" name="role" value="@ViewBag.Role" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Email">E-Posta</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password">Parola</label>
                <input asp-for="Password" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Giriş Yap</button>

            <div class="register-link">
                Hesabınız yok mu?
                <a asp-controller="Account"
                   asp-action="Register"
                   asp-route-role="@ViewBag.Role"
                   class="text-success">
                    Kayıt Ol
                </a>


            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
